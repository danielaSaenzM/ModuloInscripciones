                                                <label>Docente:</label>
                                                <select id="Docente3" name="Docente3">
                                                    @foreach (var Docente in ViewBag.Docentes3)
                                                    {
                                                        <option value="@Docente.id @Docente.Nombre">@Docente.Nombre</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group" hidden>
                                                <label>Grupo:</label>
                                                <input type="text" id="Grupo3" name="Grupo3" value="@Materia.Grupo3" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Fecha Examen:</label>
                                                <input type="text" id="DatExam3" name="DatExam3" value="@Materia.DatExam3" readonly />
                                            </div>
                                        </div>
                                    </div>
                                    <hr style="background-color:#008574; height:5px;width: 95%;" /><br />
                                }
                                @if (Materia.Materia4 != "")
                                {
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Materia 4:</label>
                                                <input type="text" id="Materia4" name="Materia4" style="width:250px" value="@Materia.Materia4" readonly />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group" hidden>
