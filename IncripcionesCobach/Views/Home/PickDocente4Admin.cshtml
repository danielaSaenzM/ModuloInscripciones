                                                <input type="text" id="idSemestre2" name="idSemestre2" value="@Materia.idSemestre2" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Docente:</label>
                                                <select id="Docente2" name="Docente2">
                                                    @foreach (var Docente in ViewBag.Docentes2)
                                                    {
                                                        <option value="@Docente.id @Docente.Nombre">@Docente.Nombre</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group" hidden>
                                                <label>Grupo:</label>
                                                <input type="text" id="Grupo2" name="Grupo2" value="@Materia.Grupo2" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Fecha Examen:</label>
                                                <input type="text" id="DatExam2" name="DatExam2" value="@Materia.DatExam2" readonly />
                                            </div>
                                        </div>
                                    </div>
                                    <hr style="background-color:#008574; height:5px;width: 95%;" /><br />
                                }
                                @if (Materia.Materia3 != "")
                                {
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Materia 3:</label>
                                                <input type="text" id="Materia3" name="Materia3" style="width:250px" value="@Materia.Materia3" readonly />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group" hidden>
                                                <label>idMateria:</label>
