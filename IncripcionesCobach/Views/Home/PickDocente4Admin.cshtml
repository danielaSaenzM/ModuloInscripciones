                                <div class="col-md-4">
                                    <div class="form-group" hidden>
                                        <label>Id Plantel:</label>
                                        <input type="text" id="idPlantel_ID_tr" name="idPlantel_ID_tr" value="@Materia.idPlantel_ID_tr" />
                                        <br>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group" hidden>
                                        <label>Referencia:</label>
                                        <input type="text" id="Referencia" name="Referencia" value="@Materia.Referencia" />
                                        <br>
                                    </div>
                                </div>
                            </div>
                            </div>
                            <br />
                        }
                        <center>
                            <div class="row">
                                <div class="col-lg-12 mb-4">
                                    <div class="card shadow mb-4">
                                        <p>
                                            <b>Una vez generada tu papeleta no habrá modificaciones</b>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </center>
                        <br />
                        <center>
                            <div class="row">
                                <div class="col-lg-12 col-md-4">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-success" value="Generar Papeleta" />
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </center>
